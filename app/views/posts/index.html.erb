<div class="container">
<div class="row">

    <div class="column">
        <div id="posts_div">
          <div id="div1"></div>
        </div>
    </div>

    <div class="column">
        <div id="title">THE TCHATBOX</div>

        <div class="message-container">
          <%= form_tag url_for(action: 'create'), multipart: true,id: "main-form" ,class: "search_form" ,method: "post",  :remote => true do %>
          <div class="form-group">
            <%= label_tag 'Pseudo', nil, class:"h4 text-info" %>
            <br>
            <%= text_field_tag 'user', @user, :value => @username, class: "form-control ", placeholder: 'ANONYME' %>
          </div>

          <div class="form-group">
            <%= label_tag 'Message', nil, class:"h4 text-info" %>
            <br>
            <%= text_area_tag 'content', @content, class: "form-control text-message",  value: "", id: "content-area", placeholder: "TOUS TYPES DE MESSAGES AUTORISÉS \nICI MARK ZUCKERBERG N'A AUCUN POUVOIR !\nPURGE À MANIER AVEC SAGESSE" %>
          </div>

          <br>

          <div class="submit-button">
            <%= submit_tag "Envoyer", id: "submit_btn" ,class: 'inner-btn'  ,:data => { disable_with: false } %>
            <%end%>
          </div>
        </div>

        <div id="purge-button">
            <%= link_to "PURGE !" , delete_all_path , method: "get" ,class: '' %>
        </div>

    </div>


</div>
</div>
