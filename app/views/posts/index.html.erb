<div class="container">
<div class="row">



    <div class="column">
        <div id="posts_div">
          <div id="div1"></div>
        </div>
    </div>



    <div class="column">
        <div id="title">LA CHATTE-BOX</div>

        <div class="message-container">
          <%= form_tag url_for(action: 'create'), multipart: true, class: "search_form" ,method: "post" do %>

          <div class="form-group">
            <%= label_tag 'User', nil, class:"h4 text-info" %>
            <br>
            <%= text_field_tag 'user', @user, :value => @username, class: "form-control " %>
          </div>

          <div class="form-group">
            <%= label_tag 'Content', nil, class:"h4 text-info" %>
            <br>
            <%= text_area_tag 'content', @content, class: "form-control text-message" %>
          </div>

          <br>

          <div class="submit-button">
            <%= submit_tag "Envoyer", id: "submit_btn" ,class: 'inner-btn', :data => { disable_with: false } %>
            
            <%end%>
          </div>

        </div>
    </div>


</div>
</div>
